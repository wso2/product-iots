<!-- This file contains the list of permissions that are associated with URL end points
    of the web app. Each permission should contain the name, permission path ,API path
    (URL) , HTTP method and OAUTH2 authorization scope (not-required).
    When defining dynamic paths for APIs, path variables are denoted by '*' notation.
    NOTE: All the endpoints of the web app should be available in this file. Otherwise
    it will result 403 error at the runtime.
-->
<PermissionConfiguration>
    <APIVersion></APIVersion>
    <!-- Device related APIs -->
    <Permission>
        <name>Get device</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/*</url>
        <method>GET</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Remove device</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/*</url>
        <method>DELETE</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Download device</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/download</url>
        <method>GET</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Update device</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/*</url>
        <method>POST</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Get Devices</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device</url>
        <method>GET</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Register Device</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/register</url>
        <method>POST</method>
        <scope>firealarm_device</scope>
    </Permission>
    <Permission>
        <name>Control Sensor</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/*/change-status</url>
        <method>POST</method>
        <scope>firealarm_user</scope>
    </Permission>
    <Permission>
        <name>Get Stats</name>
        <path>/device-mgt/firealarm/user</path>
        <url>/device/stats/*</url>
        <method>GET</method>
        <scope>firealarm_device</scope>
    </Permission>
</PermissionConfiguration>