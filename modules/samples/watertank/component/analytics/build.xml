<project name="create-sample-sensor-capps" default="zip" basedir=".">
    <property name="project-name" value="${ant.project.name}"/>
    <property name="target-dir" value="target/carbonapps"/>
    <property name="src-dir" value="src/main/resources/carbonapps"/>
    <property name="relay_sensor_dir" value="relay_sensor"/>
    <property name="waterlevel_sensor_dir" value="waterlevel_sensor"/>
    <property name="devicetype_dir" value="watertank"/>
    <target name="clean">
        <delete dir="${target-dir}"/>
    </target>
    <target name="zip" depends="clean">
        <mkdir dir="${target-dir}"/>
        <zip destfile="${target-dir}/${relay_sensor_dir}.car">
            <zipfileset dir="${src-dir}/${relay_sensor_dir}"/>
        </zip>
        <zip destfile="${target-dir}/${waterlevel_sensor_dir}.car">
            <zipfileset dir="${src-dir}/${waterlevel_sensor_dir}"/>
        </zip>
        <zip destfile="${target-dir}/${devicetype_dir}.car">
            <zipfileset dir="${src-dir}/${devicetype_dir}"/>
        </zip>
    </target>
</project>

