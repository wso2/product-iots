<?xml version="1.0" encoding="UTF-8"?>
<project name="create-sample-sensor-capps" default="zip" basedir="">

    <property name="project-name" value="${ant.project.name}"/>
    <property name="target-dir"
              value="../connectedcup-feature/src/main/resources/carbonapps"/>

    <property name="Temperature_Sensor_dir" value="Temperature_Sensor"/>
    <property name="CoffeeLevel_Sensor_dir" value="CoffeeLevel_Sensor"/>

    <target name="clean">
        <delete dir="${target-dir}" />
    </target>

    <target name="zip" depends="clean">
        <mkdir dir="${target-dir}"/>
        <zip destfile="${target-dir}/${Temperature_Sensor_dir}.car">
            <zipfileset dir="${Temperature_Sensor_dir}"/>
        </zip>
        <zip destfile="${target-dir}/${CoffeeLevel_Sensor_dir}.car">
            <zipfileset dir="${CoffeeLevel_Sensor_dir}"/>
        </zip>
    </target>

</project>
