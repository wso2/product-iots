								</transformation>
							</transformations>
						</configuration>
					</execution>
					<!--Analytics Configs-->
					<execution>
						<id>analytics-change-datasource-config</id>
						<phase>package</phase>
						<goals>
							<goal>process</goal>
						</goals>
						<configuration>
							<failOnMissingXpath>true</failOnMissingXpath>
							<transformations>
								<transformation>
