									<output>../../p2-profile/analytics-profile/target/wso2carbon-core-${carbon.kernel.version}/wso2/conf/datasources/master-datasources.xml</output>
									<config>src/analytics/conf/datasource_config_change.xml</config>
								</transformation>
							</transformations>
